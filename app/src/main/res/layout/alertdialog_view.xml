<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/purple_700"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iconAlert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/titleAlert"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="@android:color/white"
        android:src="@drawable/mailchimp"
        />
    <TextView
        app:layout_constraintStart_toEndOf="@id/iconAlert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleAlert"
        android:text="NiceStart"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        >
    </TextView>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Desea salir?"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_margin="15dp"
        >
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>